<h1>Tasks:</h1>
<ul>
  <% @tasks.each do |task| %>
 <% if task.completed == true %>
   <li><input type="checkbox" checked>
   <%= link_to task.title, task_path(task) %>
   <%= link_to "delete task", task_path(task), method: :delete, data: {confirm: 'Are you sure?'} %></li>
   <% else %>
     <li><input type="checkbox">
   <%= link_to task.title, task_path(task) %>
    <%= link_to "delete task", task_path(task), method: :delete, data: {confirm: 'Are you sure?'} %></li>
</li>
   <% end %>
 <% end %>
</ul>
<p>  <%= link_to "Add a task", tasks_new_path %>
</p>



